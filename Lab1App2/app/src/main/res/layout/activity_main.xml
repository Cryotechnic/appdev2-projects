<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/teamA"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TEAM A"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/teamAScore"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamA"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="0"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/teamB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="TEAM B"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/teamBScore"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamB"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="0"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonplus3A"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamAScore"
        android:layout_alignParentLeft="true"
        style="?android:attr/buttonStyleSmall"
        android:text="+3 Points" />

    <Button
        android:id="@+id/buttonplus2A"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonplus3A"
        style="?android:attr/buttonStyleSmall"
        android:text="+2 Points" />

    <Button
        android:id="@+id/buttonplus1A"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonplus2A"
        style="?android:attr/buttonStyleSmall"
        android:text="+1 Point" />

    <Button
        android:id="@+id/buttonplus3B"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamBScore"
        android:layout_alignParentRight="true"
        style="?android:attr/buttonStyleSmall"
        android:text="+3 Points" />

    <Button
        android:id="@+id/buttonplus2B"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonplus3B"
        android:layout_alignParentRight="true"
        style="?android:attr/buttonStyleSmall"
        android:text="+2 Points" />

    <Button
        android:id="@+id/buttonplus1B"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonplus2B"
        android:layout_alignParentRight="true"
        style="?android:attr/buttonStyleSmall"
        android:text="+1 Point" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Reset" />

    <Button
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/reset"
        android:text="Result" />

</RelativeLayout>